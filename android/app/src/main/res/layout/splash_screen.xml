<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_light_default"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="28dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/splash_screen_logo"
                android:layout_height="@dimen/splash_screen_logo"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/splash_screen_logo" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/splash_screen_spacer"
                android:layout_marginBottom="382dp"
                android:fontFamily="@font/plus_jakarta_sans"
                android:gravity="center"
                android:letterSpacing="0.04"
                android:text="@string/app_name"
                android:textColor="@color/color_text_secondary"
                android:textSize="@dimen/splash_screen_text_title"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/plus_jakarta_sans"
            android:gravity="center_horizontal"
            android:text="@string/app_description"
            android:textColor="@color/color_text_secondary"
            android:textSize="@dimen/splash_screen_text_subtitle" />

    </RelativeLayout>

</RelativeLayout>